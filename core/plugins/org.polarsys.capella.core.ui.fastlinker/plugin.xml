<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            category="org.polarsys.capella.views.category"
            class="org.polarsys.capella.core.ui.fastlinker.view.FastLinkerView"
            icon="icons/cview/fastlinker_view16x16.gif"
            id="org.polarsys.capella.core.ui.fastlinker.view"
            name="Fast Linker"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:capella.project.explorer#PopupMenu?after=group.show">
         <command
               commandId="org.polarsys.capella.core.ui.fastlinker.sendToFastLinker"
               icon="icons/cview/fastlinker_view16x16.gif"
               label="Send to Fast Linker View"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="org.polarsys.capella.core.ui.fastlinker.sendToFastLinkerVisibilityEnablementExpression">
               </reference>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=org.polarsys.capella.core.platform.sirius.ui.navigator.showRelatedElementFromDiagram">
         <command
               commandId="org.polarsys.capella.core.ui.fastlinker.sendToFastLinker"
               icon="icons/cview/fastlinker_view16x16.gif"
               label="Send to Fast Linker View"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="org.polarsys.capella.core.ui.fastlinker.sendToFastLinkerVisibilityEnablementExpression">
               </reference>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:org.polarsys.capella.core.ui.semantic.browser.view.SemanticBrowserID?after=additions">
         <command
               commandId="org.polarsys.capella.core.ui.fastlinker.sendToFastLinker"
               icon="icons/cview/fastlinker_view16x16.gif"
               label="Send to Fast Linker View"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="org.polarsys.capella.core.ui.fastlinker.sendToFastLinkerVisibilityEnablementExpression">
               </reference>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:org.polarsys.capella.core.ui.fastlinker.view?after=additions">
         <command
               commandId="org.polarsys.capella.core.platform.sirius.ui.navigator.showImpactAnalysisCommand"
               icon="platform:/plugin/org.polarsys.capella.core.platform.sirius.ui.navigator/icons/elcl16/ch_callers.gif"
               id="org.polarsys.capella.core.ui.semantic.browser.sirius.showImpactAnalysis"
               label="Show Impact Analysis..."
               style="push">
            <visibleWhen
                  checkEnabled="true">
               <with
                     variable="activeMenuSelection">
                  <and>
                     <iterate>
                        <instanceof
                              value="org.polarsys.kitalpha.emde.model.Element">
                        </instanceof>
                     </iterate>
                     <count
                           value="1">
                     </count>
                  </and>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="org.polarsys.capella.core.platform.sirius.ui.navigator.showInDiagramCommand"
               icon="platform:/plugin/org.polarsys.capella.core.platform.sirius.ui.navigator/icons/showInDiagram.gif"
               id="org.polarsys.capella.core.ui.semantic.browser.showInDiagramAction"
               label="Show in Diagram Editor"
               style="push">
            <visibleWhen
                  checkEnabled="true">
               <with
                     variable="activeMenuSelection">
                  <and>
                     <iterate>
                        <instanceof
                              value="org.polarsys.kitalpha.emde.model.Element">
                        </instanceof>
                     </iterate>
                     <count
                           value="1">
                     </count>
                  </and>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="org.polarsys.capella.core.ui.semantic.browser.sirius.semanticBrowserSetSelectionCommand"
               icon="platform:/plugin/org.polarsys.capella.core.ui.semantic.browser/icons/sembrowser_16x16.png"
               id="org.polarsys.capella.core.ui.semantic.browser.sirius.semanticBrowserSetSelection"
               label="Show in Semantic Browser"
               style="push">
            <visibleWhen
                  checkEnabled="true">
               <with
                     variable="activeMenuSelection">
                  <and>
                     <iterate>
                        <instanceof
                              value="org.polarsys.kitalpha.emde.model.Element">
                        </instanceof>
                     </iterate>
                     <count
                           value="1">
                     </count>
                  </and>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="org.polarsys.capella.core.platform.sirius.ui.navigator.locateInCapellaExplorerCommand"
               icon="platform:/plugin/org.polarsys.capella.core.platform.sirius.ui.navigator/icons/capella_16.png"
               id="org.polarsys.capella.core.platform.sirius.ui.navigator.LocateInCapellaExplorerActionFromDiagram"
               label="Show in Capella Explorer"
               style="push">
            <visibleWhen
                  checkEnabled="true">
               <with
                     variable="activeMenuSelection">
                  <and>
                     <iterate>
                        <instanceof
                              value="org.polarsys.kitalpha.emde.model.Element">
                        </instanceof>
                     </iterate>
                     <count
                           value="1">
                     </count>
                  </and>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.polarsys.capella.core.ui.fastlinker.sendToFastLinker"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="F6">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="capella.sirius.perspective">
         <viewShortcut
               id="org.polarsys.capella.core.ui.fastlinker.view">
         </viewShortcut>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.polarsys.capella.core.ui.fastlinker.SendToFastLinkerCommandHandler"
            commandId="org.polarsys.capella.core.ui.fastlinker.sendToFastLinker">
         <enabledWhen>
            <reference
                  definitionId="org.polarsys.capella.core.ui.fastlinker.sendToFastLinkerVisibilityEnablementExpression">
            </reference></enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.polarsys.capella.core.ui.fastlinker.sendToFastLinker"
            name="Send to Fast Linker View">
      </command>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="org.polarsys.capella.core.ui.fastlinker.sendToFastLinkerVisibilityEnablementExpression">
         <or>
            <with
                  variable="activeMenuSelection">
               <and>
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <or>
                        <instanceof
                              value="org.polarsys.kitalpha.emde.model.Element">
                        </instanceof>
                        <instanceof
                              value="org.eclipse.sirius.diagram.edit.api.part.IDiagramElementEditPart">
                        </instanceof>
                     </or>
                  </iterate>
               </and>
            </with>
            <with
                  variable="selection">
               <and>
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <or>
                        <instanceof
                              value="org.polarsys.kitalpha.emde.model.Element">
                        </instanceof>
                        <instanceof
                              value="org.eclipse.sirius.diagram.edit.api.part.IDiagramElementEditPart">
                        </instanceof>
                     </or>
                  </iterate>
               </and>
            </with>
         </or>
      </definition>
   </extension>
   <extension
         point="org.polarsys.capella.core.preferences.capellaPreferences">
      <category
            name="Fast Linker">
         <item
               enableByDefault="true"
               id="org.polarsys.capella.core.ui.fastlinker.sendToFastLinker"
               name="Send To Fast Linker">
         </item>
      </category>
   </extension>

</plugin>
