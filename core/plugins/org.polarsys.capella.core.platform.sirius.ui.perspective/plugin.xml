<plugin>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.polarsys.capella.core.platform.sirius.ui.perspective.CapellaPerspective"
            icon="icons/Capella16x16.png"
            id="capella.sirius.perspective"
            name="%perspective.name">
         <description>
            This is the Capella Perspective.
         </description>
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension targetID="capella.sirius.perspective">
         <viewShortcut id="org.polarsys.capella.common.tools.report.appenders.reportlogview.logview"/>
         <viewShortcut id="org.polarsys.capella.core.ui.semantic.browser.view.SemanticBrowserID"/>
         <viewShortcut
               id="capella.project.explorer">
         </viewShortcut>
      </perspectiveExtension>
   </extension>
    <extension
       point="org.eclipse.ui.views">
      <category
            id="org.polarsys.capella.views.category"
            name="Capella">
      </category>
      <category
            id="org.polarsys.capella.views.category.incubation"
            name="Capella (Incubation)">
      </category>
    </extension>
    <extension
          point="org.eclipse.core.runtime.preferences">
       <initializer
             class="org.polarsys.capella.core.platform.sirius.ui.PerspectivePreferencesInitializer">
       </initializer>
    </extension>
    <extension
          id="id"
          point="org.eclipse.core.runtime.applications">
       <application
             cardinality="singleton-global"
             thread="main"
             visible="true">
          <run
                class="org.polarsys.capella.core.platform.sirius.ui.app.CapellaApplication">
          </run>
       </application>
    </extension>
   <extension point= "org.eclipse.ui.activities" >
     <!-- Declare the activity -->
     <activity id= "org.polarsys.capella.core.hidden.activity" description= "Capella Hidden Activities" name= "Capella Hidden Activities"/>
     <!-- hidden contributions-->
     <activityPatternBinding activityId="org.polarsys.capella.core.hidden.activity" pattern="org\.eclipse\.debug\..*/.*"/>
     <activityPatternBinding activityId="org.polarsys.capella.core.hidden.activity" pattern=".*/org.eclipse.sirius.ui.modelingproject.wizard"/>
     <activityPatternBinding activityId="org.polarsys.capella.core.hidden.activity" pattern=".*/org.eclipse.sirius.ui.specificationproject.wizard"/>
	 <!-- Declare the a specific activity for elements only hidden in Capella perspective -->
	 <activity
		description="Capella Hidden Activities"
		id="org.polarsys.capella.core.perspective.hidden.activity"
		name="Capella Hidden Activities">
		<enabledWhen>
			<with
				variable="activeWorkbenchWindow.activePerspective">
				<not>
					<equals
						value="capella.sirius.perspective">
					</equals>
				</not>
			</with>
		</enabledWhen>
	 </activity>
	 <!-- This contribution is used to hide the Sirius's close contextual menu in Capella perspective -->
	 <activityPatternBinding activityId="org.polarsys.capella.core.perspective.hidden.activity" isEqualityPattern="true" pattern="org.eclipse.sirius.ui.editor/org.eclipse.sirius.ui.closeSessionMenuContribution"/>
  	 <category
               description="The single capella test category"
               id="org.polarsys.capella.rcp.activities.capellaCategory"
               name="Capella Category">
       </category>
       <activity
             description="Binds contributions that are not associated to any other capella activity"
             id="org.polarsys.capella.rcp.activities.sampleActivity"
             name="Capella Example Activity">
       </activity>
       <activity
             description="Transitions"
             id="org.polarsys.capella.rcp.activities.transition"
             name="Transitions">
       </activity>
       <activity
             id="org.polarsys.capella.rcp.activities.pattern"
             name="Modeling Pattern">
       </activity>
       <activity
             description="Replicable Elements"
             id="org.polarsys.capella.rcp.activities.re"
             name="Replicable Elements">
       </activity>
       <activity
             description="Enables support for capella libraries"
             id="org.polarsys.capella.rcp.activities.libraries"
             name="Libraries">
       </activity>
       <defaultEnablement id="org.polarsys.capella.rcp.activities.sampleActivity"/>
       <defaultEnablement id="org.polarsys.capella.rcp.activities.pattern"/>
       <defaultEnablement id="org.polarsys.capella.rcp.activities.transition"/>
       <defaultEnablement id="org.polarsys.capella.rcp.activities.re"/>
       <defaultEnablement id="org.polarsys.capella.rcp.activities.libraries"/>
       <categoryActivityBinding
             activityId="org.polarsys.capella.rcp.activities.sampleActivity"
             categoryId="org.polarsys.capella.rcp.activities.capellaCategory">
       </categoryActivityBinding>
        <categoryActivityBinding
             activityId="org.polarsys.capella.rcp.activities.transition"
             categoryId="org.polarsys.capella.rcp.activities.capellaCategory">
       </categoryActivityBinding>
        <categoryActivityBinding
             activityId="org.polarsys.capella.rcp.activities.re"
             categoryId="org.polarsys.capella.rcp.activities.capellaCategory">
       </categoryActivityBinding>
        <categoryActivityBinding
             activityId="org.polarsys.capella.rcp.activities.pattern"
             categoryId="org.polarsys.capella.rcp.activities.capellaCategory">
       </categoryActivityBinding>
         <categoryActivityBinding
             activityId="org.polarsys.capella.rcp.activities.libraries"
             categoryId="org.polarsys.capella.rcp.activities.capellaCategory">
       </categoryActivityBinding>
       <activityPatternBinding
            activityId="org.polarsys.capella.rcp.activities.transition"
            isEqualityPattern="false"
            pattern="org\.polarsys\.capella\.core\.transition.*">
      </activityPatternBinding>
      <activityPatternBinding
            activityId="org.polarsys.capella.rcp.activities.transition"
            isEqualityPattern="false"
            pattern="org\.polarsys\.capella\.core\.projection.*">
      </activityPatternBinding>
      <activityPatternBinding
            activityId="org.polarsys.capella.rcp.activities.re"
            pattern="org\.polarsys\.capella\.common\.re\..*">
      </activityPatternBinding>
      <activityPatternBinding
            activityId="org.polarsys.capella.rcp.activities.pattern"
            isEqualityPattern="false"
            pattern="org\.polarsys\.capella\.patterns\.ui/.*">
      </activityPatternBinding>
      <activityPatternBinding
            activityId="org.polarsys.capella.rcp.activities.libraries"
            pattern="org\.polarsys\.capella\.core\.libraries\.ui/.*">
      </activityPatternBinding>
      <defaultEnablement
            id="org.polarsys.capella.rcp.activities.libraries">
      </defaultEnablement>
   </extension>
   
   <!--extension point="org.eclipse.ui.splashHandlers">
      <splashHandler
            class="org.polarsys.capella.core.platform.sirius.ui.perspective.CapellaSplashHandler"
            id="org.polarsys.capella.core.product.splashHandler">
      </splashHandler>
   </extension-->
   	<extension
         point="org.eclipse.ui.statusHandlers">
         <statusHandler
               class="org.polarsys.capella.core.platform.sirius.ui.app.CapellaStatusHandler"
               id="org.polarsys.capella.core.platform.sirius.ui.perspective.statusHandler">
      	</statusHandler>
   </extension>
	<extension
			point="org.eclipse.ui.services">
		<sourceProvider
			provider="org.polarsys.capella.core.platform.sirius.ui.app.CapellaExpressionSourceProvider">
			<variable
				name="org.polarsys.capella.core.platform.workbench"
				priorityLevel="workbench">
			</variable>
		</sourceProvider>
	</extension>
      <extension
         point="org.eclipse.ui.bindings">
      <scheme
            id="org.polarsys.capella.core.defaultAcceleratorConfiguration"
            name="Capella Accelerator Configuration"
            parentId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </scheme>
   </extension>
      <extension
            point="org.polarsys.capella.core.application.AppStart">
         <appStart
               class="org.polarsys.capella.core.platform.sirius.ui.AcceleratorConfigurationInitializer">
         </appStart>
      </extension>
      <extension
            point="org.eclipse.ui.services">
         <serviceFactory
               factoryClass="org.polarsys.capella.core.platform.sirius.ui.services.PlatformSiriusServiceFactory">
            <service
                  serviceClass="org.polarsys.capella.core.platform.sirius.ui.services.IElementIdentifierService"></service>
         </serviceFactory>
      </extension>
</plugin>
