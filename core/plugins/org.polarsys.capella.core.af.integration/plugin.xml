<plugin>
   <extension
         point="org.polarsys.kitalpha.ad.viewpoint.implementation.services">
      <Implementation
            class="org.polarsys.capella.core.af.integration.services.DisplaySelectionServiceImplementation"
            label="Display Capella selection"
            type="display.capella.selection">
      </Implementation>
      <Implementation
            class="org.polarsys.kitalpha.ad.viewpoint.integration.services.DefaultServiceImplementation"
            label="Execute rules"
            type="execute.rules">
      </Implementation>
   </extension>
   <extension
         point="org.polarsys.kitalpha.ad.viewpoint.ui.provider.selection">
      <SelectionProvider
      		id="org.polarsys.capella.core.af.integration.provider.CapellaSelectionProvider"
            class="org.polarsys.capella.core.af.integration.provider.CapellaSelectionProvider"
            label="Capella provider">
      </SelectionProvider>
   </extension>
   <extension
         point="org.polarsys.capella.core.model.handler.delegateWorkbenchAdvisor">
      <advisor
            class="org.polarsys.capella.core.af.integration.AFDelegateWorkbenchAdvisor">
      </advisor>
   </extension>
   <extension point="org.polarsys.kitalpha.resourcereuse.resources">
	  <resource
	        domain="AF"
	        id="org.polarsys.capella.core.viewpoint"
	        tags="vp, stateReadOnly, stateHidden"
	        name="Capella viewpoint"
	        path="/org.polarsys.capella.core.af.integration/model/capella.vp#capella"/>
   </extension>
   <extension
         point="org.polarsys.capella.core.data.migration.migrationContributions">
	  <migrationContribution
         class="org.polarsys.capella.core.af.integration.migration.ViewpointMigrationContribution"/>         
   </extension>
   <extension
         point="org.polarsys.capella.core.data.migration.migrationContributors">
      <migrationContributor
         class="org.polarsys.capella.core.af.integration.migration.MetadataCreationContributor"/>
      <migrationContributor
         class="org.polarsys.capella.core.af.integration.migration.MetadataUpdateContributor"/>
      <migrationContributor
         class="org.polarsys.capella.core.af.integration.migration.ViewpointMigrationContributor"/>
   </extension>
</plugin>
